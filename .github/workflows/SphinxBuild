name: Sphinx build

on:
  push:
    branches:
      - main

jobs:
  sphinx-build:
    runs-on: ubuntu-latest

    steps:
    # Checkout the repository
    - name: Checkout repository
      uses: actions/checkout@v2

    # Install Pandoc
    - name: Install Pandoc
      run: |
        sudo apt-get update
        sudo apt-get install -y pandoc

    # Build HTML using Sphinx
    - name: Build HTML
      uses: ammaraskar/sphinx-action@0.4
      with:
        sphinx_args: "-b html" # specify build format as HTML
        source_dir: "docs/source" # adjust to your source directory if needed
        build_dir: "docs/build/html" # adjust to your desired output folder

    # Upload HTML build artifacts
    - name: Upload HTML artifacts
      uses: actions/upload-artifact@v1
      with:
        name: html-docs
        path: docs/build/html/

    # Deploy to gh-pages
    - name: Deploy to gh-pages
      uses: peaceiris/actions-gh-pages@v3
      if: github.ref == 'refs/heads/main'
      with:
        github_token: ${{ secrets.GITHUB_TOKEN }}
        publish_dir: docs/build/html
